#!/usr/bin/bash

MV="mv -f"
RM="rm -rf"

if test $# = "0"
then
     echo "usage: $0 file ..."
     exit 1
fi

for i in "$@"
do
   # Make old and older flavors of a file
   
   if test -e $i.oldest
   then
      ${RM} $i.oldest
   fi

   if test -e $i.older
   then
      ${MV} $i.older $i.oldest
   fi

   if test -e $i.old
   then
      ${MV} $i.old $i.older
   fi
   
   if test -e $i
   then
      ${MV} $i $i.old
   else
        print -u2 "warning: $i - no such file or directory"
   fi
done
